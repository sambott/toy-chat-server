# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /rooms                       controllers.ChatController.getActiveRooms(minutes: Int ?=5)
GET     /rooms/:room                 controllers.ChatController.getLatest(room, max: Int ?=10)
POST    /rooms/:room                 controllers.ChatController.postMessage(room)
GET     /rooms/:room/ws              controllers.ChatController.ws(room)
