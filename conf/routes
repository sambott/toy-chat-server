# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# API
GET     /room                       controllers.ChatController.getActiveRooms(minutes: Int ?=5)
GET     /room/:room                 controllers.ChatController.getLatest(room, max: Int ?=10)
POST    /room/:room                 controllers.ChatController.postMessage(room)
GET     /room/:room/ws              controllers.ChatController.ws(room)

# UI
GET     /ui                         controllers.Application.ui
